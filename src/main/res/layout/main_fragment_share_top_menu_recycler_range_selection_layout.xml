<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/main_fragment_share_top_menu_recycler_range_selection_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="#eeeeee"/>

    <TextView
        android:id="@+id/main_fragment_share_top_menu_recycler_range_selection_subtitle_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="最近"
        android:textColor="#757575"
        android:textSize="14sp"/>

    <RelativeLayout
        android:id="@+id/main_fragment_share_top_menu_recycler_range_selection_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/main_fragment_share_top_menu_recycler_range_selection_subtitle_textView">

        <ImageView
            android:id="@+id/main_fragment_share_top_menu_recycler_range_selection_icon_imageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/ic_action_everyone"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/main_fragment_share_top_menu_recycler_range_selection_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/main_fragment_share_top_menu_recycler_range_selection_icon_imageView"
            android:layout_toEndOf="@id/main_fragment_share_top_menu_recycler_range_selection_icon_imageView"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:textColor="#000"
            android:text="所有人"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/main_fragment_share_top_menu_recycler_range_selection_tick_imageView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/tick"/>
        </RelativeLayout>
</RelativeLayout>