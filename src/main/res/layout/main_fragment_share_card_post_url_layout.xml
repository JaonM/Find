<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_fragment_share_card_post_url_container"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="2dp"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <RelativeLayout
        android:id="@+id/main_fragment_share_card_post_url_user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/main_fragment_share_card_post_url_user_imageView"
            android:layout_margin="16dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/luffy"/>

        <TextView
            android:id="@+id/main_fragment_share_card_post_url_user_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/main_fragment_share_card_post_url_user_imageView"
            android:layout_toEndOf="@id/main_fragment_share_card_post_url_user_imageView"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="路飞"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/main_fragment_share_card_post_url_post_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_fragment_share_card_post_url_user_name_textView"
            android:layout_toRightOf="@id/main_fragment_share_card_post_url_user_imageView"
            android:layout_toEndOf="@id/main_fragment_share_card_post_url_user_imageView"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="2014/12/31"/>

        <ImageButton
            android:id="@+id/main_fragment_share_card_post_url_overflow_menu_imageBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_action_overflow_dark"
            android:background="#fff"
            android:contentDescription="@string/contentDescription"/>

        <!--没有title隐藏次view-->
        <TextView
            android:id="@+id/main_fragment_share_card_post_url_title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_fragment_share_card_post_url_post_time_textView"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="分享了一个连接"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/main_fragment_share_card_post_url_content_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/main_fragment_share_card_post_url_title_textView"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_tab"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_fragment_share_card_post_url_content_imageView"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/contentDescription"
                android:src="@drawable/ic_action_picture_dark"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/main_fragment_share_card_post_url_content_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:singleLine="false"
                android:text=""/>
            </LinearLayout>

        <RelativeLayout
            android:id="@+id/main_fragment_share_card_post_url_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/main_fragment_share_card_post_url_content_layout">

            <ImageButton
                android:id="@+id/main_fragment_share_card_post_url_like_btn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_action_good"
                android:contentDescription="@string/contentDescription"
                android:background="#fff"/>

            <TextView
                android:id="@+id/main_fragment_share_card_post_url_like_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/main_fragment_share_card_post_url_like_btn"
                android:layout_toEndOf="@id/main_fragment_share_card_post_url_like_btn"
                android:gravity="center"
                android:textSize="14sp"
                android:text="100"/>

            <ImageButton
                android:id="@+id/main_fragment_share_card_post_url_collect_btn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_toRightOf="@id/main_fragment_share_card_post_url_like_count"
                android:layout_toEndOf="@id/main_fragment_share_card_post_url_like_count"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_action_collect"
                android:contentDescription="@string/contentDescription"
                android:background="#fff"/>

            <ImageButton
                android:id="@+id/main_fragment_share_card_post_url_share_btn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_toRightOf="@id/main_fragment_share_card_post_url_collect_btn"
                android:layout_toEndOf="@id/main_fragment_share_card_post_url_collect_btn"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_action_share"
                android:contentDescription="@string/contentDescription"
                android:background="#fff"/>

            <TextView
                android:id="@+id/main_fragment_share_card_post_url_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"
                android:text="20"/>

            <ImageButton
                android:id="@+id/main_fragment_share_card_post_url_comment_btn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_toLeftOf="@id/main_fragment_share_card_post_url_comment_count"
                android:layout_toStartOf="@id/main_fragment_share_card_post_url_comment_count"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_action_chat"
                android:contentDescription="@string/contentDescription"
                android:background="#fff"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/main_fragment_share_card_post_url_divider_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_below="@id/main_fragment_share_card_post_url_btn_layout"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/main_fragment_share_card_post_url_random_comment_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_fragment_share_card_post_url_divider_line"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="#000"
            android:text="Nami :图不错，点赞"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>