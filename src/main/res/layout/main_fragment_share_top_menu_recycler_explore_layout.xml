<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:id="@+id/main_fragment_share_top_menu_recyler_explore_container"
    android:background="@drawable/tag_selector">

    <TextView
        android:id="@+id/main_fragment_share_top_menu_recyler_explore_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textColor="#000"
        android:text="#ANDROID"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/main_fragment_share_top_menu_recyler_explore_tick_imageView"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/tick"/>
</RelativeLayout>